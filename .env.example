# üîß AI Agent Platform - Environment Variables
# Copy this file to .env and set up your API KEYS

# üìä Application Settings
APP_NAME=AI Agent Platform
APP_VERSION=0.1.0
APP_DESCRIPTION=Universal platform for creating enterprise AI agents
DEBUG=true
LOG_LEVEL=INFO

# üåê Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# üóÑÔ∏è PostgreSQL Database - Row Level Security (RLS) Configuration
# Admin user: for migrations, schema changes, bypasses RLS
DB_ADMIN_USER=admin_user
DB_ADMIN_PASSWORD=admin_password_2025
# App user: for application queries, subject to RLS policies
DB_APP_USER=app_user
DB_APP_PASSWORD=app_password_2025

# Database connection URLs for Row Level Security
# Admin connections: for migrations, schema changes (bypasses RLS)
DATABASE_URL=postgresql+asyncpg://admin_user:admin_password_2025@localhost:5432/clever_db
DATABASE_URL_SYNC=postgresql://admin_user:admin_password_2025@localhost:5432/clever_db
# Application connections: for app queries (subject to RLS policies)
DATABASE_URL_APP=postgresql+asyncpg://app_user:app_password_2025@localhost:5432/clever_db
DATABASE_URL_APP_SYNC=postgresql://app_user:app_password_2025@localhost:5432/clever_db

# PostgreSQL connection details
POSTGRES_PASSWORD=clever_password_2025
DB_HOST=localhost
DB_PORT=5432
DB_NAME=clever_db

# ‚ö° Redis Configuration
REDIS_URL=redis://:clever_redis_password_2025@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=clever_redis_password_2025
REDIS_DB=0

# üß† Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=clever_qdrant_api_key_2025
QDRANT_COLLECTION_NAME=clever_embeddings

# ü§ñ AI Model Providers
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4096

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Azure OpenAI (Optional)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-01

# üîê Security & Authentication
SECRET_KEY=your_super_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# JWT Settings
JWT_SECRET_KEY=another_secret_key_for_jwt_tokens
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# üîí Row Level Security Settings
# Enable/disable RLS (for testing and rollback)
USE_RLS=true
# Default tenant for development/testing
DEFAULT_TENANT_ID=1

# üìä Observability & Monitoring
# OpenTelemetry
OTEL_SERVICE_NAME=ai-agent-platform
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_EXPORTER_OTLP_INSECURE=true
GRAFANA_ADMIN_PASSWORD=clever_grafana_admin_2025

# Jaeger (if using)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831

# üèóÔ∏è Environment Configuration
ENVIRONMENT=development
TENANT_ID=default_tenant

# üìß Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_TLS=true

# üîó External Services
# MCP Server URLs (Model Context Protocol)
MCP_SERVER_URLS=http://localhost:8001,http://localhost:8002

# LiteLLM Proxy (if using separate proxy)
LITELLM_PROXY_URL=http://localhost:4000

# üöÄ Performance & Optimization
# Caching
CACHE_TTL_SECONDS=3600
SEMANTIC_CACHE_THRESHOLD=0.85

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ‚öôÔ∏è Development Tools
# Database Migration
ALEMBIC_CONFIG=alembic.ini

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://clever_user:clever_password_2025@localhost:5432/clever_test_db

# üîç Feature Flags
ENABLE_SEMANTIC_CACHE=true
ENABLE_OPENTELEMETRY=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# üì± Frontend Configuration (if applicable)
FRONTEND_URL=http://localhost:3000